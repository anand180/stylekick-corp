<div class="container">
  <div class="content">
    <div class="row">
	  <div class="span8 offset2">
		<% flash.each do |key, value| %>
		  <div class="alert alert-block alert-success">
			<h4 class="alert-heading"><%= value %></h4>
		  </div>
		  <% end %>
		<br><br><br><br>
	    <div class="hero-unit" style="overflow: auto;">
		  <center>
		  	<h1>Contact Us</h1><hr>
		  </center>
		
		  <!--left column-->
		  <!--<div class="span3"> -->
		  	<p>Learn more about how Stylekick can create serious lift in sales, and reduce return rates. </p>
		  

		  	<p>
			  <strong>Phone</strong>
			  <br>
			  +1 732-669-2629
			</p><br>

		    <!--left column-->
		<div class='row'>
	      <div class="span3">
		    <p><strong>Write to us</strong><p>
			<!--form-->
			<%- model_class = User -%>

				<%= form_for :user, :url => users_path, :html => {:mehtod => 'put'} do |f| %>
				    <%= f.label :name, :class => 'control-label' %>
				      <%= f.text_field :name, :class => 'text_field' %>

				    <%= f.label :email, :class => 'control-label' %>
				      <%= f.text_field :email, :class => 'text_field' %>
				
				   	<%= f.label :about,'Inquiry', :class => 'control-label' %>
				      <%= f.select :about, User::ABOUT, :prompt => 'Select inquiry type' %>
			</div>
				<br><br>
			<div class='span3'>
				    <%= f.label :details , :class => 'control-label' %>
				      <%= f.text_area :details, :class => 'text_area', :rows => 5 %>
				    <!-- <%= f.submit "Send" %> -->

					   <%= image_submit_tag "send.png", :alt => 'send email', :class => 'send-button' %>


				<% end %>		
		     </div>	
		   </div><!--/.row-->

	    </div><!--/.hero-unit-->
	    <br><br>
	  </div><!--/.span8-->
    </div><!--/.row-->
  </div><!--/.content-->
</div> <!-- /.container -->

