<%= form_for @user do |f| %>
    <%= f.label :name, :class => 'control-label' %>
      <%= f.text_field :name, :class => 'text_field' %>

    <%= f.label :email, :class => 'control-label' %>
      <%= f.text_field :email, :class => 'text_field' %>

   	<%= f.label :About, :class => 'control-label' %>
      <%= f.select :about, User::ABOUT, :prompt => 'Select a reason' %>

    <%= f.label :details , :class => 'control-label' %>
      <%= f.text_area :details, :class => 'text_area', :rows => 4 %>
   <br>
    <!-- <%= f.submit "Send" %> -->
    <%= image_submit_tag("sk_send.png") %>

<% end %>

